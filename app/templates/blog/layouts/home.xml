<!DOCTYPE layout SYSTEM "http://schemas.tomatocms.com/dtd/layout.dtd">
<layout>
	<container cols="12">
		<widget name="html" module="core">
			<title><![CDATA[HTML content]]></title>
			<resources>
				<resource type="javascript" src="{APP_STATIC_SERVER}/js/swfobject/swfobject.js" />
				<resource type="javascript" src="{APP_STATIC_SERVER}/js/tinymce/tiny_mce.js" />
			</resources>
			<params>
				<param name="content">
					<value><![CDATA[]]></value>
				</param>
				<param name="file">
					<value><![CDATA[_header.phtml]]></value>
				</param>
			</params>
		</widget>
	</container>
	<container cols="12">
		<widget name="html" module="core">
			<title><![CDATA[HTML content]]></title>
			<resources>
				<resource type="javascript" src="{APP_STATIC_SERVER}/js/tinymce/tiny_mce.js" />
			</resources>
			<params>
				<param name="content"><value><![CDATA[]]></value></param>
				<param name="file">
					<value><![CDATA[_menu.phtml]]></value>
				</param>
			</params>
		</widget>
		<widget module="news" name="stickycategory" load="php">
			<title><![CDATA[Sticky articles]]></title>
			<resources>
				<resource type="javascript"
					src="{APP_STATIC_SERVER}/js/jquery.cycle/jquery.cycle.all.min.js" />
			</resources>
			<params>
				<param name="category_id">
					<value><![CDATA[]]></value>
				</param>
				<param name="num_articles_per_row">
					<value><![CDATA[3]]></value>
				</param>
				<param name="limit">
					<value><![CDATA[12]]></value>
				</param>
			</params>
		</widget>
	</container>
	<container cols="12">
		<container cols="8" position="first">
			<widget module="news" name="latesthome" load="php">
				<title><![CDATA[Latest article]]></title>
				<resources></resources>
				<params>
					<param name="category_ids">
						<value><![CDATA[]]></value>
					</param>
					<param name="limit">
						<value><![CDATA[5]]></value>
					</param>
				</params>
			</widget>
		</container>
		<container cols="4" position="last" cssClass="t_blog_right_columns">
			<widget name="html" module="core">
				<title><![CDATA[HTML content]]></title>
				<params>
					<param name="content"><value><![CDATA[
<div class="t_g_box">
	<div class="t_g_box_head">
		<h2>About</h2>
	</div>
	<div class="t_g_box_content">
		<a href="http://www.tomatocms.com" target="_blank"><img src="http://gravatar.com/avatar/8c4e5e6b73f88d4f6c6a93217b5e654b?s=80" style="float: left; margin-right: 5px; margin-bottom: 5px"></a>
		This is official blog of <a class="t_g_link" href="http://www.tomatocms.com" target="_blank">TomatoCMS</a>, an open source CMS powered by <a href="http://framework.zend.com" target="_blank">Zend Framework</a>, <a href="http://www.jquery.com" target="_blank">jQuery</a> and <a href="http://960.gs" target="_blank">960 grid</a>. 
	</div>
	<div class="clearfix"></div>
</div>					
]]></value></param>
					<param name="file">
						<value><![CDATA[]]></value>
					</param>
				</params>
			</widget>
			<widget module="utility" name="countdown" load="php">
				<title><![CDATA[Countdown]]></title>
				<resources>
					<resource type="javascript"
						src="{APP_STATIC_SERVER}/js/jquery.countdown/jquery.countdown.min.js" />
				</resources>
				<params>
					<param name="event">
						<value><![CDATA[TomatoCMS v2.0.5 release]]></value>
					</param>
					<param name="target">
						<value><![CDATA[2010-05-04 15:00:00]]></value>
					</param>
				</params>
			</widget>
			<widget module="news" name="category">
				<title><![CDATA[Category]]></title>
			</widget>
			<widget name="vote" module="poll">
				<title><![CDATA[Poll]]></title>
				<resources></resources>
				<params>
					<param name="poll_id">
						<value><![CDATA[1]]></value>
					</param>
				</params>
			</widget>
			<widget name="twitter" module="utility">
				<title><![CDATA[Twitter updates]]></title>
				<params>
					<param name="account"><value><![CDATA[tomatocms]]></value></param>
					<param name="limit"><value><![CDATA[10]]></value></param>
				</params>
				<cache lifetime="3600" />				
			</widget>
		</container>
	</container>
</layout>
