<!DOCTYPE permissions SYSTEM "http://schemas.tomatocms.com/dtd/module_permission.dtd">
<permissions>
	<resource name="article" description="Manage articles" langKey="permisson_article">
		<privilege name="activate" description="Activate article" langKey="permisson_article_activate" />
		<privilege name="add" description="Add new article" langKey="permisson_article_add" />
		<privilege name="delete" description="Delete article" langKey="permisson_article_delete" />
		<privilege name="edit" description="Edit article" langKey="permisson_article_edit" />
		<privilege name="hot" description="Manage hot articles" langKey="permisson_article_hot" />
		<privilege name="list" description="View the list of articles" langKey="permisson_article_list" />
		<privilege name="preview" description="Preview article" langKey="permisson_article_preview" />
	</resource>
	<resource name="revision" description="Manage revisions" langKey="permisson_revision">
		<privilege name="add" description="Add new revision" langKey="permisson_revision_add" />
		<privilege name="delete" description="Delete revision" langKey="permisson_revision_delete" />
		<privilege name="list" description="View the list of article revisions" langKey="permisson_revision_list" />
		<privilege name="restore" description="Restore revision" langKey="permisson_revision_restore" />
	</resource>
</permissions>
