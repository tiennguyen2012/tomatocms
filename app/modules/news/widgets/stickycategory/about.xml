<!DOCTYPE widget SYSTEM "http://schemas.tomatocms.com/dtd/widget_about.dtd">
<widget>
	<name>StickyCategory</name>
	<title>Sticky articles</title>
	<module>news</module>
	<description>Show the sticky articles of given category</description>
	<thumbnail></thumbnail>
	<author>TomatoCMS Core Team</author>
	<email>core@tomatocms.com</email>
	<version>2.0.1</version>
	<license>free</license>
	<params>
		<param name="category_id">
			<description>Id of category</description>
		</param>
		<param name="num_articles_per_row">
			<description>Number of articles per row</description>
		</param>
		<param name="limit">
			<description>Total number of articles</description>
		</param>
	</params>
	<resources>
		<resource type="javascript" src="{APP_STATIC_SERVER}/js/jquery.cycle/jquery.cycle.all.min.js" />
	</resources>
</widget>
