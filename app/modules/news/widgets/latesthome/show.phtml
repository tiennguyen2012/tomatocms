    </div>
    <div class="t_g_box_content">
		<?php if (($articles = $this->helper()->getLatestArticles($this->categories[0]->category_id, $this->limit)) != null && count($articles) > 0) : ?>
		<div>
			<a href="<?php echo $this->url($articles[0]->getProperties(), 'news_article_details'); ?>"><?php if ($articles[0]->image_general) : ?><img src="<?php echo $articles[0]->image_general; ?>" /><?php endif; ?><b><?php echo $articles[0]->title; ?></b></a><?php echo $this->articleIcons($articles[0]->icons); ?>
			<br />
			<?php echo $articles[0]->description; ?>
		</div>
		<div>
			<ul>
			<?php for ($i = 1; $i < count($articles); $i++) : ?>
				<li><a href="<?php echo $this->url($articles[$i]->getProperties(), 'news_article_details'); ?>"><?php echo $articles[$i]->title; ?></a><?php echo $this->articleIcons($articles[$i]->icons); ?></li>
			<?php endfor; ?>
			</ul>
		</div>
		<?php endif; ?>
	</div>			    
    <div class="t_g_box_corner t_g_box_corner_tl"></div>
    <div class="t_g_box_corner t_g_box_corner_tr"></div>
