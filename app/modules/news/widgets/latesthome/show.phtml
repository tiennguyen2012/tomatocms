<?php if ($this->categories != null) : ?>
<div class="t_g_box t_news_latesthome">
    <div class="t_g_box_head">
    	<h2><?php foreach ($this->categories as $index => $category) : ?><?php if ($index > 0) : ?> | <?php endif; ?><a href="<?php echo $this->url($category->getProperties(), 'news_article_category'); ?>"><?php echo $category->name; ?></a><?php endforeach; ?></h2>
