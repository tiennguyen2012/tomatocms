<widget>
	<name>Rating</name>
	<title>Rate article</title>
	<module>news</module>
	<description>Allow user to rate articles</description>
	<thumbnail></thumbnail>
	<author>TomatoCMS Core Team</author>
	<email>core@tomatocms.com</email>
	<version>2.0.3</version>
	<license>free</license>
