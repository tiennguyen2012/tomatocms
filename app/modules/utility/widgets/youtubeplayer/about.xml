<!DOCTYPE widget SYSTEM "http://schemas.tomatocms.com/dtd/widget_about.dtd">
<widget>
	<name>YoutubePlayer</name>
	<title>YouTube clip</title>
	<module>utility</module>
	<description>Show the clip from YouTube</description>
	<thumbnail></thumbnail>
	<author>TomatoCMS Core Team</author>
	<email>core@tomatocms.com</email>
	<version>2.0.1</version>
	<license>free</license>
	<params>
		<param name="url">
			<description>The URL for watching clip in the format: http://www.youtube.com/?watch=xxxx</description>
		</param>
		<param name="title">
			<description>The title of clip you want to show. If this is not set, it will take the title from YouTube</description>
		</param>
		<param name="width">
			<description>Width of clip (in pixel)</description>
		</param>
		<param name="height">
			<description>Height of clip (in pixel)</description>
		</param>
	</params>
	<resources></resources>
</widget>
