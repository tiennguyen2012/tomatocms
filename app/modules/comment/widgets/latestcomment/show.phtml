<div class="t_g_box t_comment_latestcomment">
    <div class="t_g_box_head">
    	<h2><?php echo $this->translator()->widget('latest_comments'); ?></h2>
    	<a class="t_g_box_head_collapse" href="javascript:void(0)">Collapse</a>				    					    				    	
    </div>
