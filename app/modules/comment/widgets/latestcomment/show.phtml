				<blockquote>
					<img src="<?php echo $this->helper()->gravatar($comment->email, 60); ?>" title="<?php echo $comment->full_name; ?>" alt="<?php echo $comment->full_name; ?>" />
					<p><?php echo $this->subString($comment->content, 400); ?></p>
					<div class="clearfix"></div>
				</blockquote>
				<cite><?php echo sprintf($this->translator()->widget('posted_by'), '<b>'.$comment->full_name.'</b>', date($this->globalConfig('datetime')->date_time_format, strtotime($comment->created_date))); ?></cite>
			</li>
			<?php endforeach; ?>
		</ul>
		<?php endif; ?>
	</div>			    
